    <link rel="stylesheet" href="css/index?ver=<%= locals.private_id %>">
</head>
<body>
    <main style="overflow: hidden;">
       <section class="welcome_panel">
           <h6>
               Welcome back
           </h6>
           <h1><%= locals.username %></h1>
           
       </section>
       <section class="links_panel">
           <div class="link_panel">
                <a href="<%= locals.url %>/message/p/<%= locals.private_id %>"><%= locals.url %>/message/p/<%= locals.private_id %></a>
                <button class="copy-button"
                    onClick="navigator.clipboard.writeText('<%= locals.url %>/message/p/<%= locals.private_id %>')"> <span class="click_effeect"></span> Copy</button>
           </div>
           <div class="link_panel">
                <a
                    href="<%= locals.url %>/message/i/<%= locals.username %>"><%= locals.url %>/message/i/<%= locals.username %></a>
                    <button class="copy-button"
    border-radius: 50%;
                        onClick="navigator.clipboard.writeText('<%= locals.url %>/message/i/<%= locals.username %>')"> <span class="click_effeect"></span> Copy</button>
           </div>
       </section>
        <a href="/logout" class="action-btn top-action">Logout</a>
            <section id="messages">
                <h2 class="">Your Messages <sub style="font-size: 10px;">Scroll down to see more</sub> </h2>
                <!-- &#39 -->
            </section>
            </div>
    </main>
        <script>
            var socket = io()

            $(() => {
                
                getMessages()
            })


            const addMessage = (messages) => {
                let date = new Date(messages?.date)
                $("#messages").append(`<div id="${messages?.date}" class="message_box">
                                            <span> ${date.toUTCString()} </span>
                                            <div class="text">
                                                hibs
                                            </div>
                                        </div>`);
                let block = document.getElementById(`${messages?.date}`)
                block.querySelector('div').innerText = messages?.message
            }

            socket.on('message/<%= locals.private_id %>', addMessage)
            const getMessages = () => {
                $.get('/message', (data) => {
                    console.log(data)
                    data.data.forEach(addMessage);
                })
            }
            
        </script>
</body>
</html>
